    "my-program": "./path/to/program"
  },
  "files": [
    "base.json",
    "nextjs.json",
    "react-library.json"
  ],
  "scripts": {
    "prepare": "npx only-allow pnpm",
    "build": "pnpm run build --filter=!@lentix/tsconfig",
    "start": "tsc --watch",
    "test": "jest ./index.ts --passWithNoTests",
    "coverage": "jest --coverage",
    "lint": "eslint *.ts*"
